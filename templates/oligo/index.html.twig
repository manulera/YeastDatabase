{% extends 'base.html.twig' %}

{% block title %}Oligos{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}
<h1>Oligos</h1>
<a href="{{ path('oligo.import') }}">
   <button class="btn btn-primary">Import from .csv file</button>
</a>
<table class="table table-striped">
    <thead>
    <tr>
    <td class="">Name</td>
    <td class="">Details</td>
    <td class="">Sequence</td>
    </tr>
    </thead>
    <tbody>
    {% for oligo in oligos %}
    <tr>
        <td>{{oligo.name}}</td>
        <td>{{oligo.details}}</td>
        <td>{{oligo.sequence}}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
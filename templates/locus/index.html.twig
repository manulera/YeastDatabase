{% extends 'base.html.twig' %}

{% block title %}Loci{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}
<h1>Loci</h1>

{% form_theme filterForm 'form_themes/spanfields.html.twig' %}
{{form(filterForm)}}
<table class="table table-striped">
    <thead>
    <tr>
    <td class="">Loci name</td>
    </tr>
    </thead>
    <tbody>
    {% for locus in pagination %}
    <tr>
        <td>{% include "locus/reference.html.twig" %}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}

{% endblock %}
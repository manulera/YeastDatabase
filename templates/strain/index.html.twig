{% extends 'base.html.twig' %}

{% block title %}Strains{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-error">
        {{message}}
    </div>
{% endfor %}

<h1>Strains</h1> 

<div class="d-flex bd-highlight mb-3">
<span>
<ul class="nav nav-pills mb-2">
  <li class="nav-item pr-md-5">
  <a class="nav-link" href="{{ path('strain.source.index') }}">Create strain</a>    
  </li>
  <li class="nav-item pr-md-5">
  <a class="nav-link" href="{{ path('strain.network') }}">Network view</a>
  </li>
</ul>
</span>
<span class='form-inline'>
    {% form_theme form 'form_themes/spanfields2.html.twig' %}
    {{form_start(form)}}
    {{form_widget(form.id, { 'attr': {'placeholder':'Filter id'}})}}
    {{form_widget(form.genotype, { 'attr': {'placeholder':'Filter genotype'}})}}
    {{form_widget(form.creator, { 'attr': {'placeholder':'Filter creator'}})}}
    {{form_widget(form.filter)}}
    {{form_end(form)}}
</span>
</div>


<table class="table table-striped">
    <thead class=>
    <tr>
    <td class="">ID</td>
    <td class="">Genotype</td>
    <td class="">Created by</td>
    <td class="">Source</td>
    <td class="">Creation date</td>
    <td class="">Location</td>
    </tr>
    </thead>
    <tbody>
    {% for strain in strains %}
    <tr>
        <td>{{strain.id}}</td>
        <td>{% include "strain/geno_reference.html.twig" %}</td>
        <td>{{strain.source.creator}}</td>
        <td>{{strain.source}}</td>
        <td>{{strain.source.date|date("d/m/Y")}}</td>
        <td>xyz</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}